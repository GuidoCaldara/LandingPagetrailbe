<div class="container">
  <div class="row">
    <div class="col-md-8  mx-auto">
      <div class="card">

        <%= link_to user_facebook_omniauth_authorize_path, class: "my-5" do %>
          <div class="fb-btn-container"><%= image_tag("fblogin.png", class:"fb-login-btn") %></div>
        <% end %>

        <h3 class="mt-5">Oppure accedi</h3>


        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name, html: { autocomplete: 'off' } )) do |f| %>
        <div class="form-inputs">
          <%= f.input :email, required: false, autofocus: true, input_html: { autocomplete: "email" } %>
          <%= f.input :password, required: false, input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions mb-3">
          <%= f.button :submit, "Log in", class:"btn btn-secondary float-right"%>
        </div>
      <% end %>




      <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
